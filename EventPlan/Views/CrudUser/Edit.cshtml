@model Teste1.Models.Pessoa
@{
    ViewData["Title"] = "Cadastro";
}
@{

    <link rel="stylesheet" href="~/css/style-cadastro.css" asp-append-version="true" />

    <div class='container'>
        <div class='card'>
            <div class="logoCadastro">
                <img src="~/img/logoPreto.svg" alt="EventPlan" class="logoPreto">
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label">Data de Nascimento:</label>
                    <input asp-for="DataNascimento" class="form-control" type="date" />
                </div>

                <div class="form-group">
                    <label asp-for="Contato" class="control-label">Contato:</label>
                    <input asp-for="Contato" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mail:</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="justify-center">
                    <button type="submit" class="botao-cadastro">Salvar</button>
                </div>
            </form>
        </div>
    </div>
}
